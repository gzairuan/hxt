//modal 打开时：新建相册或修改
$('#addAlbumModal').on('shown.bs.modal', function(event){
	var button = $(event.relatedTarget);  //获取按钮触发事件
	var opt = button.data("flag"); //获取目标传递参数
	var id = button.data("id");
	var modal = $(this);
	var btnSave = $('#btnSave'); //保存按钮
	switch(opt){
		case "createAlbum": //创建相册
			modal.find('.modal-title').text("创建相册"); //设置modal title
			$('#ablumFormId')[0].reset();
			btnSave.removeAttr('onclick');
			btnSave.attr('onclick', 'creatAblum()');
		break;
		case "editAlbum": //修改相册
			var albumDesc = button.data("albdesc"); //相册描述
			modal.find('.modal-title').text("编辑相册"); //设置modal title
			$('#albumDesc').val(albumDesc); //填充值
			btnSave.removeAttr('onclick');
			btnSave.attr('onclick', 'editAblum('+ id +')');
		break;
		case "editPhoto": //修改照片描述
			modal.find('.modal-title').text("修改照片描述");
			$('#labelDescId').html("照片描述：");
			var albumid = button.data("albumid"), //相册id
				photodesc = button.data("photodesc"); //相册描述
			
			$('#albumDesc').val(photodesc); //填充值
			btnSave.removeAttr('onclick');
			btnSave.attr('onclick', 'editPhoto('+ id +', "'+albumid+'")');
		break;
	}
	
});

/* 创建相册 */
function creatAblum(){
	//获取相册描述值
	var albumDesc = $('#albumDesc').val();
	var $from = $('#ablumFormId');
	$.ajax({
		url: rootPath + '/schoolAblumServlet?optFlag=createAlbum',
		data: $from.serialize(),
		success:function(data){
			var json = JSON.parse(data);
			intiAblumList();
		    if(json.result == "ok"){
		    	toastr.success('新增成功','提示');
				intiAblumList();
			} else {
				// 失败
				toastr.error('新增失败！请稍后再试','提示');
			}
		}
	});
	intiAblumList();
};

//修改相册
function editAblum(albumId, albumDesc){
	var albumDesc = $('#albumDesc').val();
	$.ajax({
		url: rootPath + '/schoolAblumServlet',
		data:{
			optFlag: "editAblum",
			albumId: albumId,
			albumDesc: albumDesc
		},
		success:function(data){
			var json = JSON.parse(data);
		    if(json.result == "ok"){
				toastr.success('操作成功','提示');
				intiAblumList();
		    }else{
				toastr.error('操作失败！请稍后再试','提示');
		    }
		} /* end success */
	});
}

//删除相册modal
$('#deleteModal').on("shown.bs.modal", function(e) {    
	// 这里的btn就是触发元素，即你点击的删除按钮
	var btn = $(e.relatedTarget), 
    	id = btn.data("id"), //目标ID
		opt = btn.data("flag"); //操作标识
	if(opt == "delAlbum"){ //相册相册
		$('#del_pId').html("&nbsp;是否确定删除该相册？");
    	$('#btnDel').attr('onclick', 'deleteAlbum('+id+')');
	}else{//删除照片
		var albumid = btn.data("albumid"); //相册ID
		$('#del_pId').html("&nbsp;是否确定删除该照片？");
		$('#btnDel').attr('onclick', 'deletePhoto('+id+', "'+ albumid +'")');
	}
});

/* 删除相册  */
function deleteAlbum(albumId){
	$.ajax({
		url: rootPath + '/schoolAblumServlet',
		data:{
			optFlag: "delAblum",
			albumId: albumId
		},
		success: function(data){
			var json = JSON.parse(data);
			if(json.result == "ok")
				toastr.success('操作成功','提示');
			else
				toastr.error('操作失败！请稍后再试','提示');
		}
	});
	intiAblumList();
};

//修改照片
function editPhoto(photoId, albumid){
	var photoDesc = $('#albumDesc').val();
	$.ajax({
		url: rootPath + '/schoolAblumServlet',
		data: {
			optFlag: "editPhoto",
			photoId: photoId,
			photoDesc: photoDesc
		},
		success: function(data){
			var json = JSON.parse(data);
			if(json.result == "ok"){
				toastr.success('操作成功','提示');
				ablumInfo(albumid); //刷新照片列表
			}else{
				toastr.error('操作失败！请稍后再试','提示');
			}
		}
	});
};

